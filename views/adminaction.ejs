<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .status {
          font-size: 12px;
          font-weight: bold;
          padding: 2px 8px;
          border-radius: 12px;
        }
    
        .status-added {
          color: #0d6efd;
          background-color: #e7f3ff;
        }
    
        .status-removed {
          color: #dc3545;
          background-color: #f8d7da;
        }
    
        .status-updated {
          color: #ffc107;
          background-color: #fff3cd;
        }
    </style>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="bg-light w-100" style="min-width: 576px;">
        <%- include('../partials/navbar.ejs') %>
            <div class="row mt-5 ">
                <%- include('../partials/sidebar.ejs') %>
                    <div class="col min-vh-100 pt-4">
                        <div class="bg-white mt-4 mb-4 px-4 mx-4 rounded-3 py-3">
                            <div class="text-end p-4 pb-4">
                                <span class="fw-bold">Dashboard ></span> <a href=""
                                    class="text-decoration-none">admin action</a>
                            </div>
                            <div class="container my-5">
                                <div class="card shadow">
                                  <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">Inventory History</h5>
                                  </div>
                                  <div class="card-body">
                                    <!-- Notification Item 1 -->
                                    <% adminactivity.forEach((activity)=>{%>
                                      <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                        <div>
                                          <h6 class="mb-0"><%- activity.admin_activity %></h6>
                                          <small class="text-muted"><%- new Date(activity.created_at) %></small>
                                        </div>
                                        <!-- <span class="status status-added">Added</span> -->
                                      </div>
                                    <%})%>
                                   
                                  </div>
                                </div>
                              </div>
                            

                        </div>
                    </div>
            </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <!-- <script src="/main.js" type="module"> </script> -->
    <script src="/customer.js" type="module"></script>
</body>

</html>